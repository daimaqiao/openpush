<!DOCTYPE html>
<html lang="zh-CN" ng-app="msgpushApp">
<head>
	<title><%= title %></title>
	<%- include("frag/head.ejs"); %>
	<link href="/stylesheets/home.css" rel="stylesheet">
</head>

<body>
	<%- include("frag/nav.ejs"); %>

	<div class="container" ng-controller="msgpushController">
		<div class="form-horizontal" role="form">
			<div class="form-group">
				<label for="pushhost" class="col-sm-2 control-label">服务器</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="pushhost" placeholder="服务器"
						ng-model="pushhost">
				</div>
			</div>
			<div class="form-group">
				<label for="username" class="col-sm-2 control-label">推送用户</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="username" placeholder="登录用户"
						ng-model="username">
				</div>
			</div>
			<div class="form-group">
				<label for="password" class="col-sm-2 control-label">帐户密码</label>
				<div class="col-sm-10">
					<input type="password" class="form-control" id="password" placeholder="登录密码"
						ng-model="password">
				</div>
			</div>
			<hr>
			<div class="form-group">
				<label for="topic" class="col-sm-2 control-label">推送到</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="topic" placeholder="TOPIC"
						ng-model="topic">
				</div>
			</div>
			<div class="form-group">
				<label for="message" class="col-sm-2 control-label">推送内容</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="message" placeholder="文字消息"
						ng-model="message">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default"
						ng-click="sendMessage()">发　送</button>
				</div>
			</div>
		</div>

	</div><!-- /.container -->


	<%- include("frag/tail.ejs"); %>
	<script src="/javascripts/msgpush.js"></script>
</body>
</html>

